<% include ./common/header.ejs %> <% include ./common/navbar.ejs %>

<div class="profile w-full min-h-screen bg-[#FFE7BF] pt-1">
  <form
    hidden
    id="uploadform"
    action="/fileupload"
    method="post"
    enctype="multipart/form-data"
  >
    <input type="file" name="profileimage" />
  </form>

  <div class="profdets flex flex-col items-center mt-12 mx-auto">
    <div class="relative">
      <span
        id="uploadicon"
        class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-orange-300"
      >
        <i class="ri-pencil-fill"></i>
      </span>
      <div class="w-32 h-32 bg-orange-500 rounded-full overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user.profileimage %>"
          alt=""
        />
      </div>
    </div>

    <h1 class="text-3xl font-semiboldmt-5 mt-4">@<%= user.username %></h1>
    <h3 class="text-md text-green-600 font-bold text-medium"><%= status %></h3>
    <% if(addpermission == 1) {%>
    <a
      href="/add"
      class="text-xl mt-5 px-7 py-2 bg-[#A10035] rounded-md not-italic text-[#FFE7BF]"
      >Add Post</a
    >
    <% } else { %>
    <h3 class="text-md text-red-600 font-bold text-medium">
      Cannot upload post
    </h3>
    <% } %>
  </div>

  <div class="mt-10 mx-10 px-2">
    <h2 class="font-bold text-2xl">Contact Information :</h2>
    <div class="info font-semibold text-lg">
      <h5 class="mt-2 px-7">Email-id : <%= user.email %></h5>
      <h5 class="mt-2 px-7">Contact No : <%= user.contact %></h5>
    </div>
  </div>

  <% if(addpermission == 1){ %>
   <% if(user.uploadedposts.length === 0) { %>
  <div class="mt-5 mx-5 text-xl">
    <p class="mt-5 font-bold px-2 text-red-500 mx-4">
      You haven't uploaded any post yet.
    </p>
  </div>
  <% } else { %>
  <div class="cards flex flex-wrap gap-10 px-10 mt-10">
    <div class="card">
      <div class="w-52 h-40 bg-orange-200 rounded-lg overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user?.uploadedposts[0]?.image %>"
          alt=""
        />
      </div>
      <a
        href="/show/upldedposts"
        class="inline-block text-xl font-semibold mt-3"
        >Your uploaded Posts</a
      >
      <h5 class="text-m font-semibold opacity-70">
        <%= user.uploadedposts.length %> Posts
      </h5>
    </div>
    <% } }%>
    
    <% if(addpermission == 1 || addpermission == 0){ %>
    <% if(user.likedposts.length === 0 ){ %>
    <div class="mt-5 mx-5 text-xl">
      <p class="mt-5 font-bold px-2 text-red-500 mx-4">
        You haven't liked any post yet.
      </p>
    </div>
    <% } if(user.likedposts.length > 0){ %>
    <!-- <div class="cards flex flex-wrap gap-10 px-10 mt-10"> -->
      <div class="card">
        <div class="w-52 h-40 bg-orange-200 rounded-lg overflow-hidden">
          <img
            class="w-full h-full object-cover"
            src="/images/uploads/<%= likedPostImage %>"
            alt=""
          />
        </div>
        <a
          href="/show/likedposts"
          class="inline-block text-xl font-semibold mt-3"
          >Your liked Posts</a
        >
        <h5 class="text-m font-semibold opacity-70">
          <%= user.likedposts.length %> Posts
        </h5>
      </div>

      <% }} %>
    <!-- </div> -->
  </div>

  <script>
    document
      .querySelector("#uploadicon")
      .addEventListener("click", function () {
        document.querySelector("#uploadform input").click();
      });

    document
      .querySelector("#uploadform input")
      .addEventListener("change", function () {
        document.querySelector("#uploadform").submit();
      });
  </script>

  <% include ./common/footer.ejs %>
</div>
