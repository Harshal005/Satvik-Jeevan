  <style>
    /* Basic CSS for card layout */
    .card {
      width: 300px;
      background-color: #f9f9f9;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin: 20px;
      padding: 20px;
      display: inline-block;
    }

    /* CSS for image in the card */
    .card img {
      width: 100%;
      border-radius: 8px;
      margin-bottom: 15px;
    }

    /* CSS for title */
    .card h3 {
      margin: 0;
      font-size: 1.5rem;
      color: #333;
    }

    /* CSS for description */
    .card p {
      color: #666;
      font-size: 1rem;
    }

    /* CSS for "Read More" button */
    .card .btn-read-more {
      background-color: #007bff;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    /* CSS for button hover effect */
    .card .btn-read-more:hover {
      background-color: #0056b3;
    }
  </style>

