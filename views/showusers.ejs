<% include ./Admin/adminheader.ejs %>
<% include ./Admin/sidebar.ejs %>
<% include ./Admin/adminnavbar.ejs %>

   <div class="maincontent">
        
            <% if(allusers.length > 0) { %>
                <table class="tbl">
            <tr>
                <th>User Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>Contact No</th>
                <th>User Actions</th>
            </tr>
                <% allusers.forEach(function(users) {  %>
            <tr>
                <td class="userid"><%= users._id %></td>
                <td><%= users.username %></td>
                <td><%= users.email %></td>
                <td><%= users.password %></td>
                <td><%= users.contact %></td>
                <td>
                    <div class="useractions">
                        <a href="" class="viewuser">View</a>
                        <a href="" class="deleteuser">Delete</a>
                    </div>
                </td>
            </tr>
            <% }); %>
        </table>
            <% } else { %>
                
                   <p style="color: red; margin: 20% 0 0 40%; font-size: 2vw;" >No User records</p>
                
                <% }%>
   </div>
   
<% include ./Admin/adminfooter.ejs %>