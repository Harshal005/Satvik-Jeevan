<% include ./common/header.ejs %>


<div class="w-full min-h-screen bg-orange-400 px-10 py-8">
    <div class="cards flex flex-wrap gap-20">
        <% posts.forEach(function(elem) { %>
            <div class="card w-80">
                <div class="w-full h-60 rounded-lg bg-zinc-300 overflow-hidden">
                    <img class="w-full h-full object-cover" 
                    src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h5 class="mt-2 font-semibold text-xl"><%= elem.title %></h5>
            </div>
        <% })%>
    </div>
</div>

