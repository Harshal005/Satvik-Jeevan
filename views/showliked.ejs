<div class="sap-bg">
  <h1 class="pageheading">Your Liked Posts</h1>

  <div class="cards-section">
   
    <% likedPosts.forEach(function(elem) { %>

    <div class="cards">
      <img
        src="/images/uploads/<%= elem.image %>"
        alt=""
        class="cards-img"
      />
      <hr />
      <div class="card-content">
        <h2 class="card-title"><%= elem.title %></h2>
      </div>
      <a href="/category/<%= elem.category %>/<%= elem._id %>" class="explore-card">Explore</a>
    </div>
    <% }); %> 
    
  </div>
</div>
    
